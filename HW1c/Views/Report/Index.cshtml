@using HW1c.Models;
@model ReportViewModel

@{
    ViewBag.Title = "Index";
}

<br />
<br />
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0/dist/Chart.min.js"></script>
    <style>
        body {
            font-family: "Lato", sans-serif;
        }

        .sidenav {
            height: 100%;
            width: 160px;
            position: fixed;
            z-index: 1;
            top: 0;
            left: 0;
            background-color: #111;
            overflow-x: hidden;
            padding-top: 70px;
        }

            .sidenav a {
                padding: 6px 8px 6px 16px;
                text-decoration: none;
                font-size: 30px;
                color: #818181;
                display: block;
            }

                .sidenav a:hover {
                    color: #7386D5;
                    background: #f1f1f1;
                }

        .main {
            margin-left: 180px; /* Same as the width of the sidenav */
            width: 80%;
            font-size: 28px; /* Increased text to enable scrolling */
            padding: 0px 10px;
        }
    </style>
</head>

<body>
    <div class="row">
        <!--Left Side Bar-->
        <div class="sidenav">
            <a>@Html.ActionLink("App Usage", "Index", "Report", null, new { @class = "nav-link" })</a>
            <a>@Html.ActionLink("Test Accuracy", "Accuracy", "Report", null, new { @class = "nav-link" })</a>
            <a>@Html.ActionLink("More Detail", "MoreDetail", "Report", null, new { @class = "nav-link" })</a>
        </div>

    </div>
</body>

<div class="container-fluid">
    <br />
    <h2 class="text-primary">App Usage Report</h2>
    <br />
</div>

<div class="container">
    <div class="row">
        <div class="col text-center">
            <div class="jumbotron">
                <h1 class="display-4">Active Users</h1>
                <h1 class="display-4">@Model.NumberOfUsers</h1>
                <br />
                <p class="lead">Below line chart shows the increase in mobile app users over time.</p>
            </div>

            <!-- Line Chart-->
            <canvas id="usageLineChart" width="400" height="200"></canvas>
            <script>
                var ctx = document.getElementById('usageLineChart');
                var myLineChart = new Chart(ctx, {
                    type: 'line',
                    data: {
                        labels: ["June 1", "June 2", "June 3", "June 4", "June 5", "June 6", "June 7"],
                        datasets: [{
                            label: "TOTAL",
                            data: [6, 17, 30, 53, 75, 93, 116],
                            backgroundColor: [
                                'rgba(51, 153, 255, 0.2)',
                            ],
                            borderColor: [
                                'rgba(0, 10, 130, .7)',
                            ],
                            borderWidth: 2
                        },
                        {
                            label: "Clinic A",
                            data: [2, 4, 8, 15, 23, 27, 34],
                            backgroundColor: [
                                'rgba(0, 0, 0, 0)',
                            ],
                            borderColor: [
                                'rgba(200, 99, 132, .7)',
                            ],
                            borderWidth: 2
                        },
                        {
                            label: "Clinic B",
                            data: [1, 3, 5, 10, 14, 22, 26],
                            backgroundColor: [
                                'rgba(0, 0, 0, 0)',
                            ],
                            borderColor: [
                                'rgba(86, 0, 198, 0.6)',
                            ],
                            borderWidth: 2
                        },
                        {
                            label: "Clinic C",
                            data: [0, 2, 3, 5, 9, 12, 15],
                            backgroundColor: [
                                'rgba(0, 0, 0, 0)',
                            ],
                            borderColor: [
                                'rgba(255, 216, 41, .7)',
                            ],
                            borderWidth: 2
                        },
                        {
                            label: "Clinic D",
                            data: [3, 8, 14, 23, 29, 32, 41],
                            backgroundColor: [
                                'rgba(0, 0, 0, 0)',
                            ],
                            borderColor: [
                                'rgba(99, 216, 41, .7)',
                            ],
                            borderWidth: 2
                        }
                        ]
                    },

                });
            </script>

            <div class="jumbotron">
                <h1 class="display-4">User information</h1>
                <p class="lead">Below table lists detailed mobile app related user information.</p>
            </div>

            <div class="row text-center">
                <br />
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">Date</th>
                            <th scope="col">App Version</th>
                            <th scope="col">Phone ID</th>
                            <th scope="col">Location</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (var item in Model.LogViewModel.LogList)
                            {
                                <tr>
                                    <td>@item.RecordedDateTime.ToShortDateString()</td>
                                    <td>@item.AppVersion</td>
                                    <td>@item.PhoneID</td>
                                    <td>@item.Location</td>

                                </tr>
                            }
                        }
                    </tbody>
                </table>
                <img src="~/Content/Img/PieChart1.PNG" height="300" class="ChartBox mx-auto" />
            </div>
        </div>
    </div>
</div>
