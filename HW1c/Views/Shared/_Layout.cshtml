<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - NeoCare System</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <script src="https://a.alipayobjects.com/jquery/jquery/1.11.1/jquery.js"></script>
    <script src="https://gw.alipayobjects.com/as/g/datavis/g2/2.3.13/index.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.bundle.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script type="text/javascript" src="~/Scripts/moment.min.js"></script>
    <script type="text/javascript" src="~/Scripts/daterangepicker.js"></script>
    <script src="~/Scripts/easypiechart.js"></script>
    <script src="~/Scripts/easypiechart.min.js"></script>
    <link rel="stylesheet" type="text/css" href="~/Scripts/daterangepicker.css" />
    <!--<link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/bootstrap/latest/css/bootstrap.css" />-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

</head>
<body>
    <div class="body-content">
        <!--Top Nav Bar-->
        <div class="row">
            @{
                switch (ViewBag.TopNavType)
                {
                    case "Visitor":
                        <div class="navbar fixed-top shadow p-3" style="height: 70px; background-image: linear-gradient(15deg, #fdfdcd 0%, #a1d3b8 80%);"></div>
                        break;

                    case "Doctor":
                        <nav class="navbar navbar-expand-lg navbar-light fixed-top shadow p-3 mb-3" style="background-image: linear-gradient(15deg, #fdfdcd 0%, #a1d3b8 80%);">
                            <!-- Logo -->
                            <img src="~/Content/Img/logo2.png" height="50" class="d-inline-block align-top px-md-5" alt="">
                            <!-- Links -->
                            <ul class="navbar-nav">
                                <li class="nav-item h2 px-md-5" style="margin:0; padding: 0px 0px; display:inline-block;">
                                    @Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })
                                </li>
                                <li class="nav-item dropdown h2 px-md-5" style="margin:0; padding:  0px 0px; display:inline-block;">
                                    <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                                        <i class="fa fa-bar-chart-o icon-grey-big"></i>
                                        Report
                                    </a>
                                    <span class="dropdown-menu">
                                        <a class="dropdown-item" href="#">@Html.ActionLink("App Usage", "Index", "Report", null, new { @class = "nav-link" })</a>
                                        <a class="dropdown-item" href="#">@Html.ActionLink("Test Accuracy", "Accuracy", "Report", null, new { @class = "nav-link" })</a>
                                        <a class="dropdown-item" href="#">@Html.ActionLink("More Detail", "MoreDetail", "Report", null, new { @class = "nav-link" })</a>
                                    </span>

                                </li>
                                <li class="nav-item h2 px-md-5" style="margin:0; padding:  0px 0px; display:inline-block;">
                                    @Html.ActionLink("Photo Library", "Library", "Home", null, new { @class = "nav-link" })
                                </li>
                            </ul>
                        </nav>
                        break;

                    case "Default":
                        <nav class="navbar navbar-expand-lg navbar-light fixed-top shadow p-3 mb-3" style="background-image: linear-gradient(15deg, #fdfdcd 0%, #a1d3b8 80%);">
                            <!-- Logo -->
                            <img src="~/Content/Img/logo2.png" height="50" class="d-inline-block align-top px-md-5" alt="">
                            <!-- Links -->
                            <ul class="navbar-nav">
                                <li class="nav-item h2 px-md-5" style="margin:0; padding: 0px 0px; display:inline-block;">
                                    @Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })
                                </li>
                                <li class="nav-item dropdown h2 px-md-5" style="margin:0; padding:  0px 0px; display:inline-block;">
                                    <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                                        <i class="fa fa-bar-chart-o icon-grey-big"></i>
                                        Report
                                    </a>
                                    <span class="dropdown-menu">
                                        <a class="dropdown-item" href="#">@Html.ActionLink("App Usage", "Index", "Report", null, new { @class = "nav-link" })</a>
                                        <a class="dropdown-item" href="#">@Html.ActionLink("Test Accuracy", "Accuracy", "Report", null, new { @class = "nav-link" })</a>
                                        <a class="dropdown-item" href="#">@Html.ActionLink("More Detail", "MoreDetail", "Report", null, new { @class = "nav-link" })</a>
                                    </span>
                                </li>
                                <li class="nav-item h2 px-md-5" style="margin:0; padding:  0px 0px; display:inline-block;">
                                    @Html.ActionLink("Photo Library", "Library", "Home", null, new { @class = "nav-link" })
                                </li>
                            </ul>
                        </nav>
                        break;

                }
            }
        </div>

        <!--Various Content-->
        <div class="col">
            @RenderBody()
        </div>


        <!--Footer-->
        <div class="row">
            <div class="col">
                <hr />
                <footer>
                    <p>&copy; @DateTime.Now.Year - Team Dynamic</p>
                </footer>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
